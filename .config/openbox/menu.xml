<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="apps-accessories-menu" label="Accessories">
		<item label="Terminal">
			<action name="Execute">
				<execute>
					sakura
				</execute>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<execute>
					thunar
				</execute>
			</action>
		</item>
		<item label="Gparted">
			<action name="Execute">
				<execute>
					gksu gparted
				</execute>
			</action>
		</item>
	</menu>
	<menu id="apps-editors-menu" label="Editors">
		<item label="Leafpad">
			<action name="Execute">
				<execute>
					leafpad
				</execute>
			</action>
		</item>
		<item label="Geany">
			<action name="Execute">
				<execute>
					geany
				</execute>
			</action>
		</item>
		<item label="Emacs">
			<action name="Execute">
				<execute>
					emacs
				</execute>
			</action>
		</item>
	</menu>
	<menu id="apps-net-menu" label="Internet">
		<item label="Google Chrome">
			<action name="Execute">
				<execute>
					google-chrome
				</execute>
			</action>
		</item>
		<item label="Chromium">
			<action name="Execute">
				<execute>
					chromium
				</execute>
			</action>
		</item>
		<item label="Firefox">
			<action name="Execute">
				<execute>
					firefox
				</execute>
			</action>
		</item>
		<item label="Pidgin">
			<action name="Execute">
				<execute>
					pidgin
				</execute>
			</action>
		</item>
		<item label="Skype">
			<action name="Execute">
				<execute>
					skype
				</execute>
			</action>
		</item>
		<item label="Deluge">
			<action name="Execute">
				<execute>
					deluge
				</execute>
			</action>
		</item>
		<separator/>
		<item label="Wicd">
			<action name="Execute">
				<execute>
					wicd-gtk
				</execute>
			</action>
		</item>
	</menu>
	<menu id="apps-multimedia-menu" label="Multimedia">
		<item label="DeadBeeF Music Player">
			<action name="Execute">
				<execute>
					deadbeef
				</execute>
			</action>
		</item>
	</menu>
	<menu id="apps-office-menu" label="Office">
		<item label="LibreOffice">
			<action name="Execute">
				<execute>
					libreoffice
				</execute>
			</action>
		</item>
		<item label="Evince">
			<action name="Execute">
				<execute>
					evince
				</execute>
			</action>
		</item>
	</menu>
	<menu id="apps-games-menu" label="Games">
		<item label="Minecraft">
			<action name="Execute">
				<execute>
					minecraft
				</execute>
			</action>
		</item>
		<item label="Hedgewars">
			<action name="Execute">
				<execute>
					hedgewars
				</execute>
			</action>
		</item>
	</menu>
	<menu id="system-menu" label="System">
		<item label="Task Manager">
			<action name="Execute">
				<execute>
					xfce4-taskmanager
				</execute>
			</action>
		</item>
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>
					obconf
				</command>
				<startupnotify>
					<enabled>
						yes
					</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Menu Manager">
			<action name="Execute">
				<execute>
					obmenu
				</execute>
			</action>
		</item>
		<item label="LxAppearance">
			<action name="Execute">
				<execute>
					lxappearance
				</execute>
			</action>
		</item>
		<item label="Edit rc.xml">
			<action name="Execute">
				<execute>
					leafpad ~/.config/openbox/rc.xml
				</execute>
			</action>
		</item>
		<item label="Edit autostart.sh">
			<action name="Execute">
				<execute>
					leafpad ~/.config/openbox/autostart.sh
				</execute>
			</action>
		</item>
		<separator/>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox 3">
		<separator label="Applications"/>
		<menu id="apps-accessories-menu"/>
		<menu id="apps-editors-menu"/>
		<menu id="apps-net-menu"/>
		<menu id="apps-office-menu"/>
		<menu id="apps-multimedia-menu"/>
		<menu id="apps-games-menu"/>
		<separator label="System"/>
		<menu id="system-menu"/>
		<separator/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>
					yes
				</prompt>
			</action>
		</item>
	</menu>
</openbox_menu>
